" Plugins will be downloaded under the specified directory.
call plug#begin('~/.vim/plugged')

Plug 'sjl/badwolf'

Plug 'jiangmiao/auto-pairs'

Plug 'christoomey/vim-tmux-navigator'

Plug 'godlygeek/tabular'

Plug 'vim-airline/vim-airline'

Plug 'vim-airline/vim-airline-themes'

Plug 'scrooloose/nerdtree'

" List ends here. Plugins become visible to Vim after this call.
call plug#end()

filetype plugin indent on	" required

colorscheme badwolf

set backspace=indent,eol,start
set clipboard=unnamedplus

inoremap jk <esc>

nmap Q :close<enter>

set tabstop=4 "visual of a tab
set softtabstop=4 "mechanics of a tab
set number "show line numbers

"setting line wrapping
set textwidth=0

"auto indentation
set shiftwidth=4
set autoindent
set smartindent

"search highlighting
set hlsearch
set incsearch
nnoremap <CR> :noh<CR><CR>

" movement mappings
" move vertically by visual line
nnoremap j gj
nnoremap k gk
" move through split panes with ctrl-<button>
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
" move through tabs using <ctrl-t><button>
map <C-t><up> :tabr<cr>
map <C-t><down> :tabl<cr>
map <C-t><left> :tabp<cr>
map <C-t><right> :tabn<cr>

let g:airline_powerline_fonts = 1
set guifont=Meslo_LG_S_for_Powerline:h11

inoremap <C-l> <c-g>u<Esc>[s1z=`]<c-g>a
nnoremap == 1z=

let &t_8f="\<Esc>[38;2;%lu;%lu;%lum"
let &t_8b="\<Esc>[48;2;%lu;%lu;%lum"
set termguicolors

let mapleader = ";"

nnoremap <leader>o o<esc>k
nnoremap <leader>O O<esc>j

syntax enable

