" Plugins will be downloaded under the specified directory.
call plug#begin('~/.vim/plugged')

Plug 'sjl/badwolf'

Plug 'jiangmiao/auto-pairs'

Plug 'christoomey/vim-tmux-navigator'

Plug 'godlygeek/tabular'

Plug 'vim-airline/vim-airline'

Plug 'vim-airline/vim-airline-themes'

Plug 'scrooloose/nerdtree'

Plug 'airblade/vim-gitgutter'

Plug 'mateusbraga/vim-spell-pt-br'

Plug 'luochen1990/rainbow'

Plug 'tpope/vim-surround'

Plug 'easymotion/vim-easymotion'

Plug 'tpope/vim-fugitive'

Plug 'dhruvasagar/vim-table-mode'

Plug 'reedes/vim-wordy'

Plug 'junegunn/goyo.vim'
Plug 'junegunn/limelight.vim'

" List ends here. Plugins become visible to Vim after this call.
call plug#end()

filetype plugin indent on	" required

colorscheme badwolf

highlight Comment cterm=italic

set backspace=indent,eol,start
set clipboard=unnamedplus

inoremap jk <esc>

nmap Q :close<enter>
nnoremap <space> W

let mapleader = ";"
nnoremap , ;

nnoremap <leader>g :Git 

nnoremap <leader>R :RainbowToggle<enter>

nnoremap <leader>o o<esc>k
nnoremap <leader>O O<esc>j

vnoremap <leader><tab> :normal 0i<tab><esc>$

set tabstop=4 "visual of a tab
set softtabstop=4 "mechanics of a tab
set number "show line numbers

"setting line wrapping
set textwidth=0

"auto indentation
set shiftwidth=4
set autoindent
set smartindent

"search highlighting
set hlsearch
set incsearch
nnoremap <CR> :noh<CR><CR>

" movement mappings
" move vertically by visual line
nnoremap j gj
nnoremap k gk
" move through split panes with ctrl-<button>
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
" move through tabs using <ctrl-t><button>
map <C-t><up> :tabr<cr>
map <C-t><down> :tabl<cr>
map <C-t><left> :tabp<cr>
map <C-t><right> :tabn<cr>

nnoremap <c-w>v :vsp <enter>
nnoremap <c-w>z :sp <enter>

autocmd! User GoyoEnter Limelight "Goyo integration
autocmd! User GoyoLeave Limelight!

let g:limelight_conceal_ctermfg = 'gray'
let g:airline_powerline_fonts = 1

set guifont=Meslo_LG_S_for_Powerline:h11

inoremap <C-l> <c-g>u<Esc>[s1z=`]<c-g>a
nnoremap == 1z=

let &t_8f="\<Esc>[38;2;%lu;%lu;%lum"
let &t_8b="\<Esc>[48;2;%lu;%lu;%lum"
set termguicolors

nnoremap <leader>o o<esc>k
nnoremap <leader>O O<esc>j

syntax enable

